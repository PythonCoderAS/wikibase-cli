#!/usr/bin/env node
const program = require('../lib/program')
const wdLang = require('wikidata-lang')

program
.process('lang')

const { args } = program

if (args.length === 0) return program.help()

const input = args[0]

var langData
if (input.match(/Q\d+/) != null) {
  const wdId = input.match(/Q\d+/)[0]
  langData = wdLang.byWdId[wdId]
} else {
  langData = wdLang.byCode[input]
}

if (langData != null) {
  console.log(JSON.stringify(langData, null, 2))
} else {
  console.error("couldn't find a language from input", input)
}
